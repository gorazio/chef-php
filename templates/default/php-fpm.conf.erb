;;;;;;;;;;;;;;;;;;;;;
; FPM Configuration ;
;;;;;;;;;;;;;;;;;;;;;
[global]
pid = <%= node['php']['fpm']['pid'] %>
error_log = <%= node['php']['fpm']['error-log'] %>
log_level = <%= node['php']['fpm']['log-level'] %>
emergency_restart_threshold = <%= node['php']['fpm']['emergency-restart-threshold'] %>
emergency_restart_interval = <%= node['php']['fpm']['emergency-restart-interval'] %>
process_control_timeout = <%= node['php']['fpm']['process-control-timeout'] %>
daemonize = yes
; process.max = 128
; process.priority = -19
; syslog.facility = daemon
; syslog.ident = php-fpm
; rlimit_files = 1024
; rlimit_core = 0
; events.mechanism = epoll
; systemd_interval = 10

;;;;;;;;;;;;;;;;;;;;
; Pool Definitions ;
;;;;;;;;;;;;;;;;;;;;
include = <%= "#{node['php']['fpm']['pool-dir']}/*.conf" %>
